generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URL")
}

enum Role {
  USER
  ADMIN
}

enum DangerLevel {
  LOW
  MEDIUM
  HIGH
}

enum ReportStatus {
  PENDING
  APPROVED
  REJECTED
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String   @unique
  password  String
  role      Role     @default(USER)
  avatarUrl String?  @map("avatar_url")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  reports Report[]

  @@map("users")
}

model FishReference {
  id             String      @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  scientificName String?     @map("scientific_name")
  description    String
  imageUrl       String      @map("image_url")
  dangerLevel    DangerLevel @map("danger_level")
  createdAt      DateTime    @default(now()) @map("created_at")
  updatedAt      DateTime    @updatedAt @map("updated_at")

  reports Report[]

  @@map("fish_references")
}

model Report {
  id              String       @id @default(auto()) @map("_id") @db.ObjectId
  userId          String       @map("user_id") @db.ObjectId
  fishReferenceId String?      @map("fish_reference_id") @db.ObjectId
  description     String
  photoUrl        String       @map("photo_url")
  latitude        Float
  longitude       Float
  addressText     String?      @map("address_text")
  status          ReportStatus @default(PENDING)
  adminNote       String?      @map("admin_note")
  createdAt       DateTime     @default(now()) @map("created_at")
  updatedAt       DateTime     @updatedAt @map("updated_at")

  user          User           @relation(fields: [userId], references: [id])
  fishReference FishReference? @relation(fields: [fishReferenceId], references: [id])

  @@map("reports")
}

model Article {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  title        String
  content      String
  thumbnailUrl String   @map("thumbnail_url")
  sourceUrl    String?  @map("source_url")
  createdAt    DateTime @default(now()) @map("created_at")

  @@map("articles")
}